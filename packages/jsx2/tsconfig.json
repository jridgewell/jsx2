{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "es2015",
    "lib": ["es2019", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "paths": {
      "jsx2": ["./src/jsx2.ts"]
    }
  },
  "exclude": ["dist"],
  "include": ["src", "test"]
}
